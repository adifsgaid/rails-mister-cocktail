<h1> <%= @cocktail.name %> </h1>

<div class="card col s-4">
  <h4>Ingredients</h4>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>

        <%= dose.ingredient.name %> <small> Dose: <%= dose.description %> </small>
        <%= link_to 'x', dose_path(dose), method: :delete, data: { confirm: 'Are you sure ?' }  %>
      </li>
    <% end %>
  </ul>
</div>

<%= link_to 'Add ingredients', new_cocktail_dose_path(@cocktail.id)  %>

<%= link_to 'Back', cocktails_path  %>
